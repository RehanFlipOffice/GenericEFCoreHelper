<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>GenericEFCoreHelper</PackageId>
    <Version>2.0.0</Version>
    <Authors>Mohammed Rehan Javed</Authors>
    <Company>MRJaved</Company>
    <Description>A helper library for Entity Framework Core.</Description>
    <PackageTags>EFCore;EntityFramework;Helper</PackageTags>
    <RepositoryUrl>https://github.com/RehanFlipOffice/GenericEFCoreHelper</RepositoryUrl>
    <PackageReadmeFile>readme.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="9.0.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\GEFCH.Core\GEFCH.Core.csproj" />
    <ProjectReference Include="..\GEFCH.IRepositories\GEFCH.IRepositories.csproj" />
    <ProjectReference Include="..\GEFCH.Repositories\GEFCH.Repositories.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="readme.md">
      <Pack>True</Pack>
      <PackagePath>readme.md</PackagePath>
    </None>
  </ItemGroup>

</Project>
